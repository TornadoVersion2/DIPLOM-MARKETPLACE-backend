datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @default(autoincrement()) @id
  email    String  @unique
  password String
  name     String?
}

model Category {
  id          Int       @default(autoincrement()) @id
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
}

model Product {
  id          Int       @default(autoincrement()) @id
  name        String
  description String?
  price       Float
  quantity    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  imageUrl    String    @default("http://localhost:3000/img/onyx.png")
  isActive    Boolean   @default(true)
}